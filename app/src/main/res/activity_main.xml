<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_gravity="center"
        tools:context="com.example.android.musicapp.MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/category_text_size"
            android:padding="@dimen/category_padding"
            android:text="Music Player 1.0"/>


        <TextView
            android:id="@+id/Various_Rap"
            android:layout_width="@dimen/category_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/colorSecondaryDark"
            android:padding="@dimen/category_padding"
            android:text="@string/rap"
            android:textSize="@dimen/category_text_size" />

        <TextView
            android:id="@+id/OldSchoolRnB"
            android:layout_width="@dimen/category_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/colorSecondaryLight"
            android:padding="@dimen/category_padding"
            android:text="@string/old_school_rnb"
            android:textSize="@dimen/category_text_size" />

        <TextView
            android:id="@+id/Instrumentals"
            android:layout_width="@dimen/category_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/colorSecondaryDark"
            android:padding="@dimen/category_padding"
            android:text="@string/instrumentals"
            android:textSize="@dimen/category_text_size" />

        <TextView
            android:id="@+id/SouthernRap"
            android:layout_width="@dimen/category_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/colorSecondaryLight"
            android:padding="@dimen/category_padding"
            android:text="@string/southern_rap"
            android:textSize="@dimen/category_text_size" />


    </LinearLayout>

</ScrollView>